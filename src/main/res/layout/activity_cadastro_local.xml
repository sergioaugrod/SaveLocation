<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="br.com.sergioaugrod.savelocation.activity.CadastroLocalActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/mapa_titulo"
        android:id="@+id/textView"
        android:layout_gravity="center" />

    <EditText
        android:layout_width="355dp"
        android:layout_height="wrap_content"
        android:id="@+id/etDescricao"
        android:hint="Digite a descrição do local"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" />

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="294dp" android:id="@+id/map"
        tools:context="br.com.sergioaugrod.savelocation.activity.CadastroLocalActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/inicio_btn_cadastrar"
        android:id="@+id/button"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="onClickCadastrar"
        android:layout_marginBottom="20dp" />

</LinearLayout>